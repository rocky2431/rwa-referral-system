# ===================================
# 应用配置
# ===================================
APP_NAME=RWA Referral System
DEBUG=False
API_V1_PREFIX=/api/v1
SECRET_KEY=your-production-secret-key-change-this-to-random-string-at-least-32-chars

# ===================================
# 数据库配置
# ===================================
# 本地开发
# DATABASE_URL=postgresql://rocky243@localhost:5432/rwa_referral

# Railway生产环境 (自动注入)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# ===================================
# Redis配置
# ===================================
# 本地开发
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Railway生产环境 (推荐使用REDIS_URL)
REDIS_URL=${{Redis.REDIS_URL}}

# 或者分别配置
# REDIS_HOST=${{Redis.REDIS_HOST}}
# REDIS_PORT=${{Redis.REDIS_PORT}}
# REDIS_PASSWORD=${{Redis.REDIS_PASSWORD}}

# ===================================
# Web3/区块链配置
# ===================================
BSC_NETWORK=testnet
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
BSC_MAINNET_RPC_URL=https://bsc-dataseed1.binance.org
BSC_TESTNET_CHAIN_ID=97
BSC_MAINNET_CHAIN_ID=56
REFERRAL_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ===================================
# CORS配置 (⚠️ 重要!)
# ===================================
# 本地开发
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 生产环境 (必须包含Vercel前端域名)
CORS_ORIGINS=https://socialtest2-86rmmtqhg-rocky2431s-projects.vercel.app,https://socialtest2.vercel.app,http://localhost:5173

# ===================================
# JWT配置
# ===================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-to-strong-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===================================
# 推荐系统配置
# ===================================
LEVEL_1_BONUS_RATE=15
LEVEL_2_BONUS_RATE=5
INACTIVE_DAYS=30

# ===================================
# 日志配置
# ===================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
