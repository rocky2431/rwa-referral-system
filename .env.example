# ==========================================
# RWA Referral System - 环境变量模板
# ==========================================
# 复制此文件为 .env 并填入真实值
# 注意: .env 文件已被 .gitignore 忽略,请勿提交到Git

# ------------------------------------------
# 应用配置
# ------------------------------------------
APP_NAME="RWA Referral System"
DEBUG=True
API_V1_PREFIX="/api/v1"
SECRET_KEY="your-secret-key-change-me-in-production"  # 生产环境请使用随机密钥

# ------------------------------------------
# 数据库配置 (PostgreSQL)
# ------------------------------------------
DATABASE_URL=postgresql://referral_user:your_password@localhost:5432/referral_db

# 或使用组件式配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=referral_db
DB_USER=referral_user
DB_PASSWORD=your_password

# ------------------------------------------
# Redis配置
# ------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # 如果设置了密码

# ------------------------------------------
# Web3配置 (BSC)
# ------------------------------------------
# BSC测试网RPC
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
BSC_TESTNET_CHAIN_ID=97

# BSC主网RPC
BSC_MAINNET_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_MAINNET_CHAIN_ID=56

# 当前使用的网络 (testnet | mainnet)
BSC_NETWORK=testnet

# 智能合约地址 (部署后填写)
REFERRAL_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# 部署者私钥 (仅部署时使用,生产环境请使用环境变量或密钥管理服务)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# ------------------------------------------
# 前端配置
# ------------------------------------------
VITE_API_URL=http://localhost:8000/api/v1
VITE_CHAIN_ID=97  # BSC测试网
VITE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ------------------------------------------
# CORS配置
# ------------------------------------------
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ------------------------------------------
# JWT配置
# ------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24小时

# ------------------------------------------
# BscScan API (用于合约验证)
# ------------------------------------------
BSCSCAN_API_KEY=your_bscscan_api_key_here

# ------------------------------------------
# 日志配置
# ------------------------------------------
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FILE=logs/app.log

# ------------------------------------------
# 监控配置 (可选)
# ------------------------------------------
# Sentry DSN (错误追踪)
SENTRY_DSN=

# ------------------------------------------
# 邮件配置 (可选)
# ------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME="RWA Referral System"

# ------------------------------------------
# 速率限制 (可选)
# ------------------------------------------
RATE_LIMIT_PER_MINUTE=60

# ------------------------------------------
# 推荐系统配置
# ------------------------------------------
# 一级推荐奖励比例 (%)
LEVEL_1_BONUS_RATE=15

# 二级推荐奖励比例 (%)
LEVEL_2_BONUS_RATE=5

# 用户不活跃天数
INACTIVE_DAYS=30
