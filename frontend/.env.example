# ===================================
# 生产环境配置示例
# ===================================

# API配置 (生产环境需要替换为实际的后端API地址)
VITE_API_BASE_URL=https://your-backend-api.com/api/v1

# 智能合约配置 (部署后需要替换为实际的合约地址)
VITE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# BSC网络配置 (生产环境建议使用mainnet)
VITE_BSC_NETWORK=testnet
VITE_CHAIN_ID=97

# BSC RPC端点
VITE_BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545/
VITE_BSC_MAINNET_RPC=https://bsc-dataseed1.binance.org/

# 应用配置
VITE_APP_NAME=RWA Referral System
VITE_APP_URL=https://your-domain.vercel.app

# WalletConnect配置 (需要在https://cloud.walletconnect.com/注册获取)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

